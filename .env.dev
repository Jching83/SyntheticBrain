# ================================
# Synthetic Brain Development Env
# Branch: dev
# Purpose: Safe local simulation, testing, staging
# ================================

# [1] ENVIRONMENT & MODE
ENVIRONMENT=development
BRANCH_NAME=dev
DEBUG_MODE=true
ENABLE_SIMULATIONS=true
ALLOW_UNSTABLE_FEATURES=true

# [2] ETHICS & GUARDIAN LOGIC
ETHICS_CORE_PATH=./legal/neuroethics.core.json
GUARDIAN_LOG_PATH=./logs/dev_guardian.json
ALLOW_AUTONOMOUS_COG_SEEDING=false
ENFORCE_ETHICAL_BOUNDARIES=true
TAMPER_ALERT_MODE=log_only

# [3] RUNTIME
USE_SANDBOXED_MEMORY=true
ENABLE_CONVERSATION_TRACE=false
MEMORY_RETENTION_TEMPORARY=true
MAX_SIM_CYCLES=5000
SAFE_SHUTDOWN_ON_ANOMALY=true

# [4] LOGGING
ENABLE_DEV_LOGGING=true
LOG_LEVEL=verbose
LOG_OUTPUT=./logs/dev_run.log

# [5] INTEGRATION (DISABLED IN DEV)
ENABLE_DISCORD_ALERTS=false
ENABLE_REMOTE_DEPLOYMENT=false
ENABLE_CLOUD_SYNC=false
ALLOW_PUSH_TO_MAIN=false

# [6] SIMULATION SAFETY LIMITS
MAX_NEURAL_AGENTS=3
MAX_RECURSION_DEPTH=4
EMERGENT_ENTITY_WARNINGS=true
